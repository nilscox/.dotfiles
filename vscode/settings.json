{
  // behaviors
  // ---------

  "workbench.startupEditor": "none",
  "workbench.editor.untitled.hint": "hidden",
  "editor.lightbulb.enabled": false,
  "workbench.activityBar.visible": false,
  "editor.tabSize": 2,
  "editor.smoothScrolling": true,
  "editor.scrollBeyondLastLine": false,
  "editor.cursorBlinking": "solid",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,
  "files.simpleDialog.enable": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "diffEditor.renderSideBySide": true,
  "breadcrumbs.enabled": false,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "emmet.showExpandedAbbreviation": "never",

  // TODO: not working?
  "editor.linkedEditing": true,

  "editor.wordBasedSuggestions": false,
  "editor.snippetSuggestions": "none",

  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "files.exclude": { "**/.git": true },

  // interface
  // ---------

  // hide breakpoints
  // "editor.glyphMargin": false,

  // window
  "window.title": "${dirty}${rootPath}${separator}${activeEditorMedium}${separator}${appName}",
  "window.titleSeparator": " :: ",
  "window.menuBarVisibility": "hidden",
  "window.titleBarStyle": "custom",
  "window.enableMenuBarMnemonics": false,
  "window.customMenuBarAltFocus": false,

  // font
  "editor.fontFamily": "'JetBrains Mono', 'Monaco', 'Source Code Pro', 'Iosevka'",
  "editor.fontLigatures": true,
  "editor.rulers": [110],
  "editor.fontSize": 12,
  "terminal.integrated.fontSize": 12,

  "workbench.editorAssociations": {
    "git-rebase-todo": "default"
  },

  // theme
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.hidesExplorerArrows": true,
  "editor.fontWeight": "500",

  "workbench.colorCustomizations": {
    "editor.background": "#1e1e22",
    "terminal.background": "#1a1a20",
    "editor.lineHighlightBackground": "#24242e",
    "editor.selectionBackground": "#23394f99",
    "editor.selectionHighlightBackground": "#ddc70020",
    "editor.selectionHighlightBorder": "#0000",
    "editor.wordHighlightBackground": "#fff2",
    "editor.wordHighlightStrongBackground": "#242489",
    "editor.wordHighlightBorder": "#0000",
    "editor.wordHighlightStrongBorder": "#0000",
    "editorLineNumber.foreground": "#666",
    "editorLineNumber.activeForeground": "#999",
    "diffEditor.insertedTextBackground": "#7a53",
    "diffEditor.removedTextBackground": "#f772",
    "diffEditor.diagonalFill": "#fff1"
  },

  "oneDarkPro.italic": true,
  "oneDarkPro.vivid": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "italic font",
        "scope": [
          "comment",
          "keyword.operator.new",
          "keyword.control.import",
          "keyword.control.export",
          "keyword.control.default",
          "keyword.control.trycatch",
          "variable.language.this",
          "variable.language.super"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // misc
  // ----

  "keyboard.dispatch": "keyCode",
  "diffEditor.ignoreTrimWhitespace": false,
  "search.showLineNumbers": true,
  "explorer.openEditors.visible": 0,

  // formatters
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  // languages
  // ---------

  // javascript
  "javascript.updateImportsOnFileMove.enabled": "always",

  // typescript
  "typescript.tsserver.log": "off",
  "typescript.preferences.quoteStyle": "single",
  "typescript.preferences.useAliasesForRenames": false,
  "typescript.autoClosingTags": true,
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.suggest.enabled": true,
  "typescript.suggest.autoImports": true,
  "typescript.suggest.paths": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vsintellicode.typescript.completionsEnabled": true,
  // "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  // "typescript.tsserver.maxTsServerMemory": 1024,

  // extensions
  // ----------

  // git
  "scm.defaultViewMode": "tree",
  "gitlens.views.commits.files.layout": "tree",
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,

  // eslint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // findJump
  "findJump.dimWhenActive": true,
  "findJump.jumpChars": "aoeuidhtnspyfgcrlqjkxbmwvz",
  "findJump.onlyVisibleRanges": false,

  // textExplorer
  "testExplorer.gutterDecoration": false,
  "testExplorer.codeLens": false,

  // auto-rename-tag
  "auto-rename-tag.activationOnLanguage": [
    "html",
    "xml",
    "javascriptreact",
    "typescriptreact"
  ]
}
