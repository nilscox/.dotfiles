{

  // behaviors
  // ---------

  "workbench.startupEditor": "none",
  "editor.tabSize": 2,
  "editor.smoothScrolling": true,
  "editor.scrollBeyondLastLine": false,
  "editor.cursorBlinking": "solid",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.autoReveal": false,
  "files.simpleDialog.enable": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // interface
  // ---------

  // window
  "window.title": "${dirty}${rootPath}${separator}${activeEditorMedium}${separator}${appName}",
  "window.titleSeparator": " :: ",
  "window.zoomLevel": 0,

  // font
  "editor.fontFamily": "'JetBrains Mono', 'Monaco', 'Source Code Pro'",
  "editor.fontLigatures": true,
  "editor.rulers": [80, 120],
  "editor.fontSize": 11,

  // workbench
  "workbench.activityBar.visible": false,
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#13559499",
    "editor.selectionHighlightBackground": "#13645599",
    "editor.selectionHighlightBorder": "#00000000"
  },

  // theme
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.hidesExplorerArrows": true,

  // misc
  // ----

  "keyboard.dispatch": "keyCode",
  "diffEditor.ignoreTrimWhitespace": false,
  "search.showLineNumbers": true,
  "explorer.openEditors.visible": 0,
  "editor.minimap.enabled": true,

  // languages
  // ---------

  // typescript
  "typescript.tsserver.log": "verbose",
  "typescript.preferences.quoteStyle": "single",

  // extensions
  // ----------

  // gitlens
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,

  // findJump
  "findJump.dimWhenActive": true,
  "findJump.jumpChars": "aoeuidhtnspyfgcrlqjkxbmwvz",
  "findJump.onlyVisibleRanges": false,

  // colorInfo
  "colorInfo.languages": [
    { "selector": "css", "colors": "css" },
    { "selector": "html", "colors": "css" },
    { "selector": "javascript", "colors": "css" },
    { "selector": "javascriptreact", "colors": "css" },
    { "selector": "typescript", "colors": "css" },
    { "selector": "typescriptreact", "colors": "css" },
  ],

}
