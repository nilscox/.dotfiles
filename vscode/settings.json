{
  // behaviors
  // ---------

  "workbench.startupEditor": "none",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.panel.defaultLocation": "right",
  "editor.lightbulb.enabled": false,
  "editor.tabSize": 2,
  "editor.smoothScrolling": true,
  "editor.scrollBeyondLastLine": false,
  "editor.cursorBlinking": "solid",
  "editor.colorDecorators": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,
  "files.simpleDialog.enable": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "diffEditor.renderSideBySide": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "emmet.showExpandedAbbreviation": "never",

  // TODO: not working?
  "editor.linkedEditing": true,

  "editor.wordBasedSuggestions": false,
  "editor.snippetSuggestions": "none",

  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "files.exclude": { "**/.git": true },

  // integrated terminal
  "terminal.integrated.tabs.location": "left",
  "terminal.integrated.showLinkHover": false,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontFamily": "Source Code Pro",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.env.linux": {
    "PATH": "${env:PATH}:${env:HOME}/.nvm/versions/node/v14.16.0/bin"
  },
  "terminal.integrated.commandsToSkipShell": [
    "-workbench.action.quickOpen",
    "workbench.action.toggleAuxiliaryBar"
  ],

  // window
  "window.title": "${dirty}${rootPath}${separator}${activeEditorMedium}${separator}${appName}",
  "window.titleSeparator": " :: ",
  "window.menuBarVisibility": "compact",
  "window.titleBarStyle": "custom",
  "window.enableMenuBarMnemonics": false,
  "window.customMenuBarAltFocus": false,

  // interface
  "editor.minimap.enabled": false,
  "workbench.activityBar.visible": false,
  "breadcrumbs.enabled": false,

  // font
  "editor.fontFamily": "'JetBrains Mono', 'Monaco', 'Source Code Pro', 'Iosevka'",
  "editor.fontLigatures": true,
  "editor.rulers": [110],
  "editor.fontSize": 13,

  "workbench.editorAssociations": {
    "git-rebase-todo": "default"
  },

  // theme
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.hidesExplorerArrows": true,
  "editor.fontWeight": "400",

  "workbench.colorCustomizations": {
    "editor.background": "#1e1e22",
    "terminal.background": "#1a1a20",
    "editor.lineHighlightBackground": "#262630",
    "editor.selectionBackground": "#273946",
    "editor.selectionHighlightBackground": "#839ec730",
    "editor.selectionHighlightBorder": "#839ec740",
    "editor.wordHighlightBackground": "#fff3",
    "editor.wordHighlightBorder": "#fff6",
    "editor.wordHighlightStrongBackground": "#0000ff66",
    "editor.wordHighlightStrongBorder": "#fff6",
    "editorLineNumber.foreground": "#666",
    "editorLineNumber.activeForeground": "#999",
    "editorHoverWidget.highlightForeground": "#55bed9",
    "diffEditor.insertedTextBackground": "#7a53",
    "diffEditor.removedTextBackground": "#f772",
    "diffEditor.diagonalFill": "#fff1"
  },

  "oneDarkPro.italic": true,
  "oneDarkPro.bold": false,
  "oneDarkPro.vivid": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "italic font",
        "scope": [
          "comment",
          "keyword.operator.new",
          "keyword.control.import",
          "keyword.control.export",
          "keyword.control.default",
          "keyword.control.trycatch",
          "variable.language.this",
          "variable.language.super"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // misc
  // ----

  "keyboard.dispatch": "keyCode",
  "diffEditor.ignoreTrimWhitespace": false,
  "search.showLineNumbers": true,
  "explorer.openEditors.visible": 0,

  // formatters
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  // languages
  // ---------

  // javascript
  "javascript.updateImportsOnFileMove.enabled": "always",

  // typescript
  "typescript.tsserver.log": "off",
  "typescript.preferences.quoteStyle": "single",
  "typescript.preferences.useAliasesForRenames": false,
  "typescript.autoClosingTags": true,
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.suggest.enabled": true,
  "typescript.suggest.autoImports": true,
  "typescript.suggest.paths": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.jsxAttributeCompletionStyle": "none",
  "vsintellicode.typescript.completionsEnabled": true,
  // "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  // "typescript.tsserver.maxTsServerMemory": 1024,

  // extensions
  // ----------

  // git
  "scm.defaultViewMode": "tree",
  "gitlens.views.commits.files.layout": "tree",
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": true,

  // eslint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // findJump
  "findJump.dimWhenActive": true,
  "findJump.jumpChars": "aoeuidhtnspyfgcrlqjkxbmwvz",
  "findJump.onlyVisibleRanges": false,

  // textExplorer
  "testExplorer.gutterDecoration": false,
  "testExplorer.codeLens": false,

  // auto-rename-tag
  "auto-rename-tag.activationOnLanguage": [
    "html",
    "xml",
    "javascriptreact",
    "typescriptreact"
  ],

  // tailwind
  "tailwindCSS.colorDecorators": false,

  // cspell
  "cSpell.language": "en,fr",
  "cSpell.ignorePaths": ["**/yarn.lock", "**/package.json"],
  "cSpell.customDictionaries": {
    "custom-dictionary-user": {
      "name": "custom-dictionary-user",
      "path": "~/.cspell/custom-dictionary-user.txt",
      "addWords": true,
      "scope": "user"
    }
  }
}
