{
  // behaviors
  // ---------

  "workbench.startupEditor": "none",
  "editor.tabSize": 2,
  "editor.smoothScrolling": true,
  "editor.scrollBeyondLastLine": false,
  "editor.cursorBlinking": "solid",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.autoReveal": false,
  "files.simpleDialog.enable": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "diffEditor.renderSideBySide": true,
  "breadcrumbs.enabled": false,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "emmet.showExpandedAbbreviation": "never",
  "workbench.editor.wrapTabs": true,

  // TODO: not working?
  "editor.linkedEditing": true,

  "editor.wordBasedSuggestions": false,
  "editor.snippetSuggestions": "none",

  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "files.exclude": { "**/.git": true },

  // interface
  // ---------

  // window
  "window.title": "${dirty}${rootPath}${separator}${activeEditorMedium}${separator}${appName}",
  "window.titleSeparator": " :: ",
  "window.menuBarVisibility": "hidden",
  "window.titleBarStyle": "custom",
  "window.enableMenuBarMnemonics": false,
  "window.customMenuBarAltFocus": false,

  // font
  "editor.fontFamily": "'JetBrains Mono', 'Monaco', 'Source Code Pro'",
  "editor.fontLigatures": true,
  "editor.rulers": [80, 120],
  "editor.fontSize": 11,

  "editor.lightbulb.enabled": false,

  // workbench
  "workbench.activityBar.visible": false,
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#135694a4",
    "editor.selectionHighlightBackground": "#94949449",
    "editor.selectionHighlightBorder": "#a5a5a549",
    "editorLineNumber.foreground": "#666666",
    // not working on the current theme
    "editorLineNumber.activeForeground": "#999999",
    "diffEditor.removedTextBackground": "#cc333340",
    "diffEditor.insertedTextBackground": "#0033cc60",
    "diffEditor.diagonalFill": "#cccccc20"
  },

  "workbench.editorAssociations": [
    {
      "viewType": "default",
      "filenamePattern": "git-rebase-todo"
    }
  ],

  // theme
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.hidesExplorerArrows": true,

  // misc
  // ----

  "keyboard.dispatch": "keyCode",
  "diffEditor.ignoreTrimWhitespace": false,
  "search.showLineNumbers": true,
  "explorer.openEditors.visible": 0,
  "editor.minimap.enabled": false,

  // formatters
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  // languages
  // ---------

  // javascript
  "javascript.updateImportsOnFileMove.enabled": "always",

  // typescript
  "typescript.tsserver.log": "verbose",
  "typescript.preferences.quoteStyle": "single",
  "typescript.preferences.useAliasesForRenames": false,
  "typescript.autoClosingTags": true,
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.suggest.enabled": true,
  "typescript.suggest.autoImports": true,
  "typescript.suggest.paths": true,
  "vsintellicode.typescript.completionsEnabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  // "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  // "typescript.tsserver.maxTsServerMemory": 1024,

  // extensions
  // ----------

  // gitlens
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,

  // eslint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // findJump
  "findJump.dimWhenActive": true,
  "findJump.jumpChars": "aoeuidhtnspyfgcrlqjkxbmwvz",
  "findJump.onlyVisibleRanges": false,

  "auto-rename-tag.activationOnLanguage": [
    "html",
    "xml",
    "javascriptreact",
    "typescriptreact"
  ]
}
