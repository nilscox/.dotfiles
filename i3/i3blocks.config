[mediaplayer]
command=$SCRIPT_DIR/mediaplayer
color=#FFFFFF
instance=spotify
interval=5
signal=10

[volume]
command=$SCRIPT_DIR/volume
color=#FFFFFF
label=♪
interval=once
signal=10

[public-ip]
command=echo $(curl 'ifconfig.me/ip')
label=ip:
color=#90F09E
interval=1000
markup=pango

[local-ip]
command=$SCRIPT_DIR/iface
label=lan:
color=#90F0CE
interval=10
markup=pango

[batterybar]
command=acpi | grep unavailable >/dev/null || $SCRIPT_DIR/batterybar
label=bat:
interval=5
markup=pango
min_width=bat: ■■■■■
color=#FCCCAA

[disk-root]
command=$SCRIPT_DIR/disk-usage
DEVICE=/dev/nvme0n1p2
LABEL=root
color=#C7CEFA
interval=30

[disk-home]
command=$SCRIPT_DIR/disk-usage
DEVICE=/dev/nvme0n1p3
LABEL=home
color=#FFD6C1
interval=30

[memory]
command=$SCRIPT_DIR/memory
color=#F6F0A2
label=mem:
interval=30

[load]
command=$SCRIPT_DIR/load_average3
color=#92C8B0
interval=10
label=load:

[cpu]
command=$SCRIPT_DIR/cpu_usage
color=#B5EAD7
interval=10
label=cpu:

[time]
command=date '+%F %T'
color=#CCCCCC
interval=1
