[mediaplayer]
command=$SCRIPT_DIR/mediaplayer
color=#FAEEAA
instance=spotify
interval=5
signal=10

[volume]
command=$SCRIPT_DIR/volume
color=#AAD1FA
label=♪
interval=once
signal=10

[public-ip]
command=curl 'ifconfig.me/ip'
label=ip:
color=#CDFAAA
interval=10
markup=pango

[local-ip]
command=$SCRIPT_DIR/iface
label=lan:
color=#CDFAAA
interval=10
markup=pango

[batterybar]
command=acpi | grep unavailable >/dev/null || $SCRIPT_DIR/batterybar
label=bat:
interval=5
markup=pango
min_width=bat: ■■■■■

[memory]
command=$SCRIPT_DIR/memory
color=#ebbeb5
label=mem:
interval=30

[load]
command=$SCRIPT_DIR/load_average3
color=#f7c983
interval=10
label=load:

[cpu]
command=$SCRIPT_DIR/cpu_usage
color=#b4f0ea
interval=10
label=cpu:

[time]
command=date '+%F %T'
color=#CCCCCC
interval=1
